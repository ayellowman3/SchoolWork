public class Holder{
	private int value;
	public void Holder(int initialValue){	//remove void from constructor
		initialValue = value;				//value = initialValue
	}
	public int getValue(){
		return value;
	}
	public void addToValue(int toAdd){
		int value += toAdd;					//remove int
	}
}


